{{!-- about the author --}}

{{#foreach authors}}
  <div class="author-info">
    <h4 class="author-name">Author</h4>
    {{#if profile_image}}
      <a href="{{url}}"><img src="{{profile_image}}" alt="Author image" class="author-avatar"></a>
    {{else}}
      <a href="{{url}}"><img src="{{asset "images/defaultimage.jpg"}}" alt="Author image" class="author-avatar"></a>
    {{/if}}
    <div class="author-details">
      <div class="author">
        <a href="{{url}}">{{name}}</a>
      </div>
      <div class="author-meta-info">
        {{#if location}}
          <span class="location"><i class="fal fa-home"></i>{{location}}</span>
        {{/if}}
        {{#if website}}
          <span class="website"><a href="{{website}}" targer="_BLANK"><i class="fal fa-globe"></i>{{t "Website"}}</a></span>
        {{/if}}
        {{#if twitter}}
          <span class="twitter"><a href="{{twitter_url}}"><i class="fab fa-twitter"></i>{{twitter}}</a></span>
        {{/if}}
        {{#if facebook}}
          <span class="facebook"><a href="{{facebook_url}}"><i class="fab fa-facebook"></i></a></span>
        {{/if}}
      </div>
    </div>
    {{#if bio}}
      <p class="author-bio">
        {{{bio}}}
      </p>
    {{/if}}
  </div>
{{/foreach}}
{{!-- end widget --}}

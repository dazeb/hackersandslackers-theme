<a class="series-post-card" href="{{url}}">
  <div class="series-post-card-number">{{@number}}</div>
  <div class="series-post-card-detail">
    <h3 class="series-post-card-title">{{title}}</h3>
    <div class="series-post-card-excerpt">{{excerpt}}</div>
    <div class="reading-time"><i class="fa-regular fa-clock"></i> <span>{{reading_time}}</span></div>
  </div>
</a>
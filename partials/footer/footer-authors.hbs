{{#if 'authors'}}
    <div class='footer-widget authors'>
        <h4 class='footer-title'>{{t 'Authors' }}</h4>
        <ul class='footer-list'>
            {{#get 'authors' limit='8' order="posts.count desc"}}
                {{#foreach authors}}
                    <li>
                        <a href="/authors/{{slug}}" title="{{name}}" class="author-{{slug}} {{slug}}" >
                            {{name}}
                        </a>
                    </li>
                {{/foreach}}
            {{/get}}
        </ul>
    </div>
{{/if}}